# Local development environment variables.
# Copy to .env.local (which is gitignored) and fill in values.

HTTP_ADDR=:8080
DATABASE_URL=sqlite::memory:
LOG_LEVEL=info
UPLOAD_DIR=./uploads

# WeChat Mini Program integration (server-side only).
WECHAT_APPID=
WECHAT_APPSECRET=

# Optional: offline call notification via subscribe message.
WECHAT_CALL_SUBSCRIBE_TEMPLATE_ID=
WECHAT_CALL_SUBSCRIBE_PAGE=pages/linkbridge/call/call

